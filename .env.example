#   with_coffee BOOLEAN DEFAULT false,
#   created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
# );
#
# -- Enable Row Level Security
# ALTER TABLE waitlist ENABLE ROW LEVEL SECURITY;
